    <div class="container">
        <div class="form-div">
            <h1>Book Form</h1>
            <form action="/bookM" method="post">
                <select name="users" class="padd" id="width" multiple>
                    <% for (var i=0; i < users.length; i++){ %>
                        <option value="<%= users[i].name %>">
                            <%= users[i].name %>
                        </option>
                        <% } %>
                </select>
                    
                </div> 
                </div>
                <div class="inputdiv name-div">
                    <input type="text" name="book" id="book" placeholder="book name">
                </div>
                <div class="inputdiv email-div">
                    <input type="text" name="author" id="author" placeholder="author name">
                </div>
                <div class="inputdiv phone-div">
                    <input type="date" name="date">
                </div>
                <div class="inputdiv submit-div">
                    <input type="submit" value="submit">
                </div>
            </form>
        </div>
    </div>




